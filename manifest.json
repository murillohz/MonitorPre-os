{
    "manifest_version": 3,
    "name": "Monitor de Preços Aprimorado",
    "version": "1.1",
    "description": "Monitore preços de produtos online e receba notificações sobre quedas de preço.",
    "permissions": [
        "storage",
        "notifications"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
